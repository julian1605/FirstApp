<h2 class="login-title">Log in</h2>

<div class="row">
  <div class="col-md-5">
  </div>
  <div class="col-md-2">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field login">
      <%= f.email_field :email, autofocus: true, class:"form-control", placeholder:"Enter your email"%>
    </div>

    <div class="field login">
      <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"Enter your password" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field login">
        <%= f.check_box :remember_me, class:"login-checkbox" %>
        <%= f.label :remember_me, class:"login-remember" %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class:"btn btn-primary" %>
    </div>
  <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
